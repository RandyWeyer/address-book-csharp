@{
  Layout = "_Layout";
}

<h1>Update Address for this contact</h1>

<form action='/update-submit' method="post">
  <input type="hidden" name="id" value="@Model.GetId()">
  <div class='form-group'>
    <label for='street'>House Number and Street</label>
    <input id='street' name='street' class='form-control' type='text' value='@Model.GetStreet()'>
  </div>
  <div class='form-group'>
    <label for='city'>State</label>
    <input id='city' name='city' class='form-control' type='text' value='@Model.GetCity()'>
  </div>
  <div class='form-group'>
    <label for='state'>State</label>
    <input id='state' name='state' class='form-control' type='text' value='@Model.GetState()'>
  </div>
  <div class='form-group'>
    <label for='zipcode'>Zip Code</label>
    <input id='zipcode' name='zipcode' class='form-control' type='text' value='@Model.GetZipcode()'>
  </div>

  <button type='submit' class='btn btn-primary'>Update Address</button>
</form>
